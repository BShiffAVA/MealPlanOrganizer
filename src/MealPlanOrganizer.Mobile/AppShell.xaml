<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MealPlanOrganizer.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MealPlanOrganizer.Mobile"
    Title="MealPlanOrganizer.Mobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Meal Plans"
        ContentTemplate="{DataTemplate local:MealPlansPage}"
        Route="MealPlansPage" />

    <ShellContent
        Title="Add Recipe"
        ContentTemplate="{DataTemplate local:AddRecipePage}"
        Route="AddRecipePage" />

    <ShellContent
        Title="Import Recipe"
        ContentTemplate="{DataTemplate local:ExtractRecipePage}"
        Route="ExtractRecipePage" />

    <!-- Logout Menu Item -->
    <MenuItem 
        Text="Sign Out"
        Clicked="OnLogoutClicked" />

</Shell>
