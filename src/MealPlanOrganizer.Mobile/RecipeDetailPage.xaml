<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MealPlanOrganizer.Mobile"
             x:Class="MealPlanOrganizer.Mobile.RecipeDetailPage"
             Title="Recipe Details">
    <ContentPage.Resources>
        <local:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">
            
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                             IsRunning="True" 
                             IsVisible="True"
                             Color="{StaticResource Primary}"
                             HeightRequest="50"/>
            
            <!-- Content Container (hidden while loading) -->
            <VerticalStackLayout x:Name="ContentContainer" IsVisible="False" Spacing="20">
                
                  <!-- Recipe Image -->
                  <Frame x:Name="ImageFrame"
                      Padding="0"
                      CornerRadius="12"
                      HasShadow="False"
                      IsVisible="False"
                      BorderColor="{StaticResource Gray600}">
                      <Image x:Name="RecipeImage"
                          Aspect="AspectFill"
                          HeightRequest="200" />
                  </Frame>

                <!-- Header -->
                <Frame BackgroundColor="{StaticResource Primary}" 
                       Padding="20" 
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="TitleLabel" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <HorizontalStackLayout Spacing="15">
                            <Label x:Name="CuisineLabel" 
                                   FontSize="14" 
                                   TextColor="White" 
                                   VerticalOptions="Center"/>
                            <Label x:Name="RatingLabel" 
                                   FontSize="14" 
                                   TextColor="White" 
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <HorizontalStackLayout Spacing="10">
                    <Button x:Name="EditButton"
                            Text="Edit Recipe"
                            Clicked="OnEditClicked"
                            BackgroundColor="#FF9800"
                            TextColor="White" />
                </HorizontalStackLayout>

                <!-- Description -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Description" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    <Label x:Name="DescriptionLabel" 
                           FontSize="14" 
                           TextColor="{StaticResource Gray600}"/>
                </VerticalStackLayout>

                <!-- Recipe Info -->
                <Frame BorderColor="{StaticResource Gray200}" 
                       BackgroundColor="#1A1A1A" 
                       Padding="15" 
                       CornerRadius="10">
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                            <Label Text="Prep Time" FontSize="12" TextColor="{StaticResource Gray400}"/>
                            <Label x:Name="PrepTimeLabel" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                            <Label Text="Cook Time" FontSize="12" TextColor="{StaticResource Gray400}"/>
                            <Label x:Name="CookTimeLabel" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="0" Grid.Column="2" Spacing="5">
                            <Label Text="Servings" FontSize="12" TextColor="{StaticResource Gray400}"/>
                            <Label x:Name="ServingsLabel" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Spacing="5">
                            <Label Text="Created By" FontSize="12" TextColor="{StaticResource Gray400}"/>
                            <Label x:Name="CreatorLabel" FontSize="14" TextColor="White"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Ratings Summary -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Ratings" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    
                    <!-- Star Breakdown -->
                    <Frame BorderColor="{StaticResource Gray600}" 
                           BackgroundColor="#1A1A1A" 
                           Padding="12" 
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Label x:Name="AvgRatingLabel" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="4">
                                <Label Grid.Row="0" Grid.Column="0" Text="5★" TextColor="White" FontSize="12"/>
                                <ProgressBar Grid.Row="0" Grid.Column="1" x:Name="Star5Progress" ProgressColor="{StaticResource Primary}" Margin="8,0"/>
                                <Label Grid.Row="0" Grid.Column="2" x:Name="Star5Count" TextColor="White" FontSize="12"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Text="4★" TextColor="White" FontSize="12"/>
                                <ProgressBar Grid.Row="1" Grid.Column="1" x:Name="Star4Progress" ProgressColor="{StaticResource Primary}" Margin="8,0"/>
                                <Label Grid.Row="1" Grid.Column="2" x:Name="Star4Count" TextColor="White" FontSize="12"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Text="3★" TextColor="White" FontSize="12"/>
                                <ProgressBar Grid.Row="2" Grid.Column="1" x:Name="Star3Progress" ProgressColor="{StaticResource Primary}" Margin="8,0"/>
                                <Label Grid.Row="2" Grid.Column="2" x:Name="Star3Count" TextColor="White" FontSize="12"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Text="2★" TextColor="White" FontSize="12"/>
                                <ProgressBar Grid.Row="3" Grid.Column="1" x:Name="Star2Progress" ProgressColor="{StaticResource Primary}" Margin="8,0"/>
                                <Label Grid.Row="3" Grid.Column="2" x:Name="Star2Count" TextColor="White" FontSize="12"/>
                                
                                <Label Grid.Row="4" Grid.Column="0" Text="1★" TextColor="White" FontSize="12"/>
                                <ProgressBar Grid.Row="4" Grid.Column="1" x:Name="Star1Progress" ProgressColor="{StaticResource Primary}" Margin="8,0"/>
                                <Label Grid.Row="4" Grid.Column="2" x:Name="Star1Count" TextColor="White" FontSize="12"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- User's Personal Rating -->
                    <Frame x:Name="UserRatingFrame" 
                           BorderColor="{StaticResource Primary}" 
                           BackgroundColor="#2A2A2A" 
                           Padding="12" 
                           CornerRadius="8"
                           IsVisible="False">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Your Most Recent Rating" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                            <HorizontalStackLayout Spacing="8">
                                <Label x:Name="UserRatingStars" FontSize="16" TextColor="White"/>
                                <Label x:Name="UserRatingDate" FontSize="12" TextColor="{StaticResource Gray400}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Label x:Name="UserRatingFrequency" FontSize="12" TextColor="{StaticResource Gray400}"/>
                            <Label x:Name="UserRatingComments" FontSize="13" TextColor="White" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- Rate This Recipe Section -->
                    <Frame BorderColor="{StaticResource Primary}" 
                           BackgroundColor="#1A1A1A" 
                           Padding="16" 
                           CornerRadius="10">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Rate This Recipe" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            
                            <!-- Star Rating Buttons -->
                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Button x:Name="Star1Button" Text="1★" Clicked="OnStarClicked" 
                                        WidthRequest="50" HeightRequest="44" 
                                        BackgroundColor="{StaticResource Gray600}" TextColor="White"/>
                                <Button x:Name="Star2Button" Text="2★" Clicked="OnStarClicked" 
                                        WidthRequest="50" HeightRequest="44" 
                                        BackgroundColor="{StaticResource Gray600}" TextColor="White"/>
                                <Button x:Name="Star3Button" Text="3★" Clicked="OnStarClicked" 
                                        WidthRequest="50" HeightRequest="44" 
                                        BackgroundColor="{StaticResource Gray600}" TextColor="White"/>
                                <Button x:Name="Star4Button" Text="4★" Clicked="OnStarClicked" 
                                        WidthRequest="50" HeightRequest="44" 
                                        BackgroundColor="{StaticResource Gray600}" TextColor="White"/>
                                <Button x:Name="Star5Button" Text="5★" Clicked="OnStarClicked" 
                                        WidthRequest="50" HeightRequest="44" 
                                        BackgroundColor="{StaticResource Gray600}" TextColor="White"/>
                            </HorizontalStackLayout>
                            
                            <!-- Selected Rating Display -->
                            <Label x:Name="SelectedRatingLabel" 
                                   Text="Tap a star to select your rating" 
                                   FontSize="14" 
                                   TextColor="{StaticResource Gray400}" 
                                   HorizontalOptions="Center"/>
                            
                            <!-- Frequency Preference Picker -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="How often would you like this recipe?" 
                                       FontSize="14" 
                                       TextColor="{StaticResource Gray400}"/>
                                <Picker x:Name="FrequencyPicker" 
                                        Title="Select frequency (optional)"
                                        TextColor="White"
                                        TitleColor="{StaticResource Gray400}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String></x:String>
                                            <x:String>Once a week</x:String>
                                            <x:String>Once a month</x:String>
                                            <x:String>A few times a year</x:String>
                                            <x:String>Yearly</x:String>
                                            <x:String>Never</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </VerticalStackLayout>
                            
                            <!-- Comments Entry -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Comments (optional)" 
                                       FontSize="14" 
                                       TextColor="{StaticResource Gray400}"/>
                                <Editor x:Name="CommentsEditor" 
                                        Placeholder="Share your thoughts about this recipe..." 
                                        PlaceholderColor="{StaticResource Gray600}"
                                        TextColor="White"
                                        BackgroundColor="#2A2A2A"
                                        HeightRequest="80"
                                        MaxLength="500"/>
                                <Label x:Name="CommentsCharCount" 
                                       Text="0/500" 
                                       FontSize="11" 
                                       TextColor="{StaticResource Gray600}" 
                                       HorizontalOptions="End"/>
                            </VerticalStackLayout>
                            
                            <!-- Submit Button -->
                            <Button x:Name="SubmitRatingButton" 
                                    Text="Submit Rating" 
                                    Clicked="OnSubmitRatingClicked"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    IsEnabled="False"/>
                            
                            <!-- Rating Status Message -->
                            <Label x:Name="RatingStatusLabel" 
                                   FontSize="13" 
                                   TextColor="{StaticResource Gray400}" 
                                   HorizontalOptions="Center"
                                   IsVisible="False"/>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- All Ratings List -->
                    <Label Text="All Ratings" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <CollectionView x:Name="RatingsCollection">
                        <CollectionView.EmptyView>
                            <Label Text="No ratings yet" 
                                   TextColor="White" 
                                   FontSize="14"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="{StaticResource Gray600}" 
                                       BackgroundColor="#1A1A1A"
                                       Padding="12" 
                                       Margin="0,4" 
                                       CornerRadius="8">
                                    <VerticalStackLayout Spacing="6">
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Rating}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   TextColor="White"/>
                                            <Label Text="★" FontSize="14" TextColor="White"/>
                                            <Label Text="{Binding UserId}" 
                                                   FontSize="13" 
                                                   TextColor="White"/>
                                            <Label Text="•" FontSize="13" TextColor="White"/>
                                            <Label Text="{Binding RatedUtc, StringFormat='{0:MMM d, yyyy}'}" 
                                                   FontSize="13" 
                                                   TextColor="White"/>
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding FrequencyDisplay}" 
                                               FontSize="12" 
                                               TextColor="{StaticResource Gray400}"
                                               IsVisible="{Binding FrequencyPreference, Converter={StaticResource StringNotEmptyConverter}}"/>
                                        <Label Text="{Binding Comments}" 
                                               FontSize="14" 
                                               TextColor="White"
                                               LineBreakMode="WordWrap"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Ingredients -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Ingredients" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    <CollectionView x:Name="IngredientsCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="{StaticResource Gray600}" 
                                       BackgroundColor="#1A1A1A"
                                       Padding="12" 
                                       Margin="0,2" 
                                       CornerRadius="8">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="•" FontSize="16" VerticalOptions="Center" TextColor="White"/>
                                        <Label FontSize="15" VerticalOptions="Center">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Quantity}" FontAttributes="Bold" TextColor="White"/>
                                                    <Span Text=" " TextColor="White"/>
                                                    <Span Text="{Binding Name}" TextColor="White"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </HorizontalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Instructions -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Instructions" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    <CollectionView x:Name="StepsCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="{StaticResource Primary}" 
                                       Padding="15" 
                                       Margin="0,5" 
                                       CornerRadius="10"
                                       BackgroundColor="#1A1A1A">
                                    <HorizontalStackLayout Spacing="15">
                                        <Frame BackgroundColor="{StaticResource Primary}" 
                                               Padding="10" 
                                               CornerRadius="20" 
                                               WidthRequest="40" 
                                               HeightRequest="40"
                                               HasShadow="False">
                                            <Label Text="{Binding StepNumber}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   TextColor="White" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center"/>
                                        </Frame>
                                        <Label Text="{Binding Instruction}" 
                                               FontSize="15" 
                                               VerticalOptions="Center" 
                                               LineBreakMode="WordWrap"
                                               TextColor="White"
                                               HorizontalOptions="FillAndExpand"/>
                                    </HorizontalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
